# Tsklets Production Environment Variables
# Copy this file to /.env (project root) and update with production values

# Database Configuration
DB_NAME=tasklets
DB_USER=postgres
DB_PASSWORD=CHANGE-THIS-TO-STRONG-PASSWORD
DB_PORT=5432

# Application Security
JWT_SECRET=CHANGE-THIS-TO-RANDOM-SECRET-KEY-MIN-32-CHARS
NODE_ENV=production

# Application Ports
CLIENT_PORT=4010
INTERNAL_PORT=4020
API_PORT=4030

# Optional: CORS Configuration
# ALLOWED_ORIGINS=https://yourdomain.com,https://internal.yourdomain.com

# Optional: Logging
# LOG_LEVEL=info
